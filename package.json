{
  "name": "node-ts",
  "version": "0.1.0",
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "dev": "nodemon --watch src --ext ts,js --exec 'tsc && node ./build/index.js'",
    "lint": "eslint ./src --ext .js --ext .ts",
    "lint:fix": "npm run lint --fix",
    "clean": "rimraf build",
    "build": "npm run clean && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leifarriens/node-ts.git"
  },
  "author": "Leif Arriens",
  "bugs": {
    "url": "https://github.com/leifarriens/node-ts/issues",
    "homepage": "https://github.com/leifarriens/node-ts#readme"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  }
}
